  {
    "version": "0.2.0",
    "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (type in script name)",
      "cwd": "${workspaceFolder}",
      "program": "${command:AskForScriptName}",
      "args": []
    },
      {
        "name": "Python Debugger: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal"
      },
      {
        "name": "Bash Debug",
        "type": "bashdb",
        "request": "launch",
        "program": "${workspaceFolder}/knottrain.sh",
        "stopOnEntry": false,
        "args": [],
        "cwd": "${workspaceFolder}",
        "environment": [],
        "terminal": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
}